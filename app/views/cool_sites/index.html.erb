<div class="main">
  <div class="container">
    <div class="row"><div class="col-md-12"><div class="panel">
        
      <div id="site_nodes">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= raw Settings.site_index_html %>
            <%= link_to("我要提交", new_cool_site_path, class: "btn btn-success")%>
          </div>
        </div>

        <% @site_nodes.each do |node| %>
        <div class="panel panel-default">
          <div class="panel-heading"><%= node.name %></div>
          <div class="panel-body">
            <% node.cool_sites.each do |item| %>
            <div class="col-md-2 site">
              <%= image_tag(item.favicon_url, class: "favicon")%>
              <%= link_to item.title, item.website, target: "_blank", rel: "nofollow", title: item.desc %>
            </div>
            <% end %>
          </div>
          </div>
        <% end %>
      </div>
      </div></div>
    </div>
  </div>
</div>